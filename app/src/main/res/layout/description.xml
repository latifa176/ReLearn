<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Addt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/main_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/main_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="/main_txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sub_main_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="sub_main_txt"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_main_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black_24dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_share_black_24dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_person_black_24dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btns"
            android:layout_marginStart="10dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="desc"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/matrialT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btns"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="matrialT"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/uniname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btns"
            android:layout_marginStart="10dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="uniname"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="453dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="descr"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/mainsitebtn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="25dp"

            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Add to cart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</ScrollView>